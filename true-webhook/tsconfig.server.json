{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "module": "commonjs",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "declaration": false,
    "incremental": false
  },
  "include": ["src/server.ts", "src/api/**/*.ts"],
  "exclude": ["node_modules", ".next", "dist"]
}
