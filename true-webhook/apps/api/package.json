{
  "name": "twm-monitor-api",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "postinstall": "prisma generate --schema ../../prisma/schema.prisma && prisma generate --schema ../../prisma/master/schema.prisma",
    "dev": "cross-env NODE_ENV=development ts-node-dev --respawn --transpile-only src/server.ts",
    "build": "prisma generate --schema ../../prisma/schema.prisma && prisma generate --schema ../../prisma/master/schema.prisma && tsc -p tsconfig.build.json",
    "start": "cross-env NODE_ENV=production node dist/server.js",
    "start:railway": "node scripts/railway-start.mjs"
  },
  "dependencies": {
    "@prisma/client": "7.2.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "prisma": "7.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20",
    "cross-env": "^10.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5"
  }
}
